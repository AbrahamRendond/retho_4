              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
    </nav>

    <div class="container mt-4">
      <div class="card border-secondary">
          <div class="card-header">Agregar Nuevos Registros</div>
          <div class="card-body">
              <form action="/save" method="POST">
                  <div class="mb-3">
                      <label for="user" class="form-label">Nombre</label>
                      <input type="text" class="form-control" name="user" id="user" tabindex="1">
                  </div>

                  <div class="mb-3">
                      <label for="user" class="form-label">Rol</label>
                      <select name="rol" id="rol" class="form-select">
                          <option value="admin" selected>Admin</option>
                          <option value="data entry">Data entry</option>
                      </select>
                  </div>

                  <div class="mb-3">
                    <label for="FechaSolicitada" class="form-label">Fecha Solicitada</label><br>
                    <input type="date" name="FechaSolicitada" id="FechaSolicitada"><br> 
                  </div>

                  <div class="mb-3">
                    <label for="rfc" class="form-label">RFC</label><br>
                    <input type="text" name="rfc" id="rfc"><br> 
                  </div>

                  <div class="mb-3">
                    <label for="Nempleado" class="form-label">Numero de empleado</label><br> 
                    <input type="number" name="Nempleado" id="Nempleado">
                  </div>

                  <div class="mb-3">
                    <label for="lugar" class="form-label">Lugar</label><br> 
                    <input type="text" name="lugar" id="lugar" value="Irapuato, Gto" readonly="readonly"> 
                  </div>

                  <div class="mb-3">
                    <label for="DiasSol" class="form-label">Dias solicitados</label><br> 
                    <input type="number" name="DiasSol" id="DiasSol">
                  </div>

                  <div class="mb-3">
                    <label for="DiasRes" class="form-label">Dias restantes</label><br> 
                    <input type="number" name="DiasRes" id="DiasRes" readonly="readonly">
                  </div>

                  <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                  <a href="/" class="btn btn-secondary">Cancelar</a>
              </form>
          </div>
      </div>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
